{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "moduleResolution": "node",
    "outDir": "lib",
    "removeComments": true,
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./types"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}